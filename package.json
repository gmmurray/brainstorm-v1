{
  "name": "brainstorm-v1",
  "version": "0.0.1",
  "description": "a demo app built using alpinejs and expressjs",
  "main": "app.js",
  "repository": "https://github.com/gmmurray/brainstorm-v1",
  "author": "gmmurray",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel watch:client watch:server",
    "watch:client": "webpack --watch",
    "watch:server": "nodemon",
    "clean": "npx rimraf ./build/",
    "prebuild": "yarn clean",
    "build": "webpack && tsc",
    "postbuild": "ts-node ./copyViews.ts",
    "start": "node ./build/app.js",
    "test": "jest --watch --collectCoverage --runInBand",
    "test:husky": "jest",
    "postinstall": "husky install",
    "pre-commit": "pretty-quick --staged && yarn test:husky",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn test:husky"
    }
  },
  "devDependencies": {
    "@types/alpinejs": "^3.7.0",
    "@types/connect-livereload": "^0.6.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/hbs": "^4.0.1",
    "@types/jest": "^27.4.1",
    "@types/livereload": "^0.9.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "husky": "^8.0.0",
    "jest": "27.0.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "alpinejs": "^3.10.2",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "connect-livereload": "^0.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-openid-connect": "^2.7.2",
    "fs-extra": "^10.1.0",
    "hbs": "^4.2.0",
    "http-status-codes": "^2.2.0",
    "livereload": "^0.9.3",
    "mongodb-memory-server": "^8.5.2",
    "mongoose": "^6.3.2",
    "path": "^0.12.7",
    "ts-loader": "^9.3.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
